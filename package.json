{
	"name": "rbxts-transformer-jest",
	"version": "0.0.3",
	"description": "A Jest transformer for Roblox TypeScript (rbxts) projects.",
	"keywords": ["jest", "roblox", "rbxts", "testing", "transformer"],
	"repository": {
		"type": "git",
		"url": "https://github.com/christopher-buss/rbxts-transformer-jest.git"
	},
	"license": "MIT",
	"author": "Christopher Buss <christopher.buss@pm.me> (https://github.com/christopher-buss)",
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": "./dist/index.cjs",
		"./package.json": "./package.json"
	},
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.cts",
	"files": ["dist", "!dist/**/*.tsbuildinfo"],
	"scripts": {
		"build": "tsdown",
		"lint": "eslint --cache",
		"lint:ci": "eslint --cache --cache-strategy content",
		"prepack": "nr build",
		"prepare": "simple-git-hooks",
		"prepublishOnly": "nr build",
		"release": "bumpp",
		"test": "vitest run --project unit",
		"test:all": "vitest run",
		"test:coverage": "vitest run --project unit --coverage",
		"test:integration": "vitest run --project integration",
		"test:watch": "vitest --project unit",
		"typecheck": "tsgo --noEmit",
		"watch": "tsdown --watch"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*": "pnpm exec eslint --fix --cache --no-warn-ignored",
		"*.ts": ["sh -c 'pnpm tsgo --noEmit'"]
	},
	"devDependencies": {
		"@antfu/ni": "catalog:dev",
		"@isentinel/eslint-config": "catalog:lint",
		"@isentinel/tsconfig": "catalog:tsc",
		"@rbxts/compiler-types": "catalog:integration",
		"@rbxts/jest": "catalog:test",
		"@rbxts/jest-globals": "catalog:test",
		"@rbxts/types": "catalog:types",
		"@roblox-ts/path-translator": "catalog:peer",
		"@roblox-ts/rojo-resolver": "catalog:peer",
		"@types/node": "catalog:types",
		"@typescript/native-preview": "catalog:tsc",
		"@vitest/coverage-v8": "catalog:test",
		"@vitest/eslint-plugin": "catalog:lint",
		"better-typescript-lib": "catalog:tsc",
		"bumpp": "catalog:cli",
		"eslint": "catalog:lint",
		"eslint-plugin-erasable-syntax-only": "catalog:lint",
		"eslint-plugin-n": "catalog:lint",
		"eslint-plugin-pnpm": "catalog:lint",
		"eslint_d": "catalog:lint",
		"file-entry-cache": "catalog:dev",
		"get-tsconfig": "catalog:tsc",
		"jiti": "catalog:script",
		"lint-staged": "catalog:lint",
		"madge": "catalog:dev",
		"pncat": "catalog:cli",
		"publint": "catalog:lint",
		"roblox-ts": "catalog:integration",
		"simple-git-hooks": "catalog:lint",
		"tsdown": "catalog:build",
		"type-fest": "catalog:types",
		"typescript": "catalog:tsc",
		"unplugin-unused": "catalog:build",
		"vitest": "catalog:test"
	},
	"peerDependencies": {
		"@roblox-ts/path-translator": "^1.1.0",
		"@roblox-ts/rojo-resolver": "^1.1.0"
	},
	"peerDependenciesMeta": {
		"@roblox-ts/path-translator": {
			"optional": true
		},
		"@roblox-ts/rojo-resolver": {
			"optional": true
		}
	},
	"packageManager": "pnpm@10.29.3+sha512.498e1fb4cca5aa06c1dcf2611e6fafc50972ffe7189998c409e90de74566444298ffe43e6cd2acdc775ba1aa7cc5e092a8b7054c811ba8c5770f84693d33d2dc",
	"engines": {
		"node": ">=v24.12.0"
	}
}
